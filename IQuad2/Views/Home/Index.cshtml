@model List<IQuad2.Models.User>

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">

        <div class="col-md-4 p-0 one-col element-animate">
            <div class="col-inner p-xl-5 p-lg-5 p-md-4 p-sm-4 p-4"><img src="~/Pictures/appointment.png" />
                <h2>Make an Appointment</h2>
             
                <div class="row">
                    <div class="col-lg-12 d-flex flex-column">
                        <input name="patient-name" placeholder="Full Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Patient Name'" class="form-control mt-20" required="" type="text">
                    </div><br />

                    <div class="col-lg-6 d-flex flex-column">
                    <br />
                        <input name="phone" placeholder="Phone" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Phone'" class="form-control mt-20" required="" type="text">
                    </div>

                    <div class="col-lg-6 d-flex flex-column">
                        <br />
                        <input name="email" placeholder="Email address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email address'" class="form-control mt-20" required="" type="email">
                    </div>

                    <div class="col-lg-6 d-flex flex-column">
                        <br />
                        <input name="dob" placeholder="Date of birth" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Date of birth'" class="form-control mt-20" required="" type="text" id="datepicker">
                    </div>

                    <div class="col-lg-6 d-flex flex-column">
                    <br />
                        <input name="appoinment-date" placeholder="Appoinment date" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Appoinment date'" class="form-control mt-20" required="" type="text" id="datepicker2">
                    </div><br />

                    <div class="col-lg-12 flex-column">
                    <br />
                    <textarea rows="5" class="form-control mt-20" name="message" placeholder="Messege" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Messege'" required=""></textarea>
                    </div> 

                    <div class="col-lg-12 d-flex justify-content-end send-btn">
                        <br />
                        <button color="red">Confirm booking</button>
                    </div>

                    <div class="alert-msg"></div>
                </div>
                <hr />
            </div>
        </div>

        <div class="col-md-4 p-0 two-col element-animate">
            <div class="col-inner p-xl-5 p-lg-5 p-md-4 p-sm-4 p-4">
                <img src="~/Pictures/clock.png" />
                <h2>Opening Hours</h2>
                <ul class="colm-1">
                    <li><h4>Monday - Friday <span>:</span>  8:00am to 05:00pm</h4></li>
                    <li><h4>Saturday   <span>:</span>  9:00am to 03:00pm</h4></li>
                    <li><h4>Sunday    <span>:</span>     closed</h4></li>
                </ul>
            </div>
            </div>

        <div class="col-md-4 p-0 three-col element-animate">
            <div class="col-inner p-xl-5 p-lg-5 p-md-4 p-sm-4 p-4">
                <img src="~/Pictures/question-icon.png" />
                <h2>Ask a question</h2>
                <p>Feel free to ask any question and we will contact you to clear up the details.    </p>

                <div class="col-lg-12 d-flex flex-column">
                    <input name="patient-name" placeholder="Full Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Name'" class="form-control mt-20" required="" type="text">
                </div>

                <div class="col-lg-6 d-flex flex-column">
                    <br />
                    <input name="email" placeholder="Email address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email address'" class="form-control mt-20" required="" type="email">
                </div>

                <div class="col-lg-12 flex-column">
                    <br />
                    <textarea rows="5" class="form-control mt-20" name="message" placeholder="Messege" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Messege'" required=""></textarea>
                    <br />
                </div>

                <div class="col-lg-12 d-flex justify-content-end send-btn">
                    <button color="red">Submit</button>
                    <hr />
                </div>
            </div>

        </div>


    </div>
    
</div>





